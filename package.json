{
  "name": "luno-web",
  "version": "1.0.2",
  "description": "Luno web app",
  "scripts": {
    "start": "npm run update && babel-node server/index.js",
    "dev": "npm run update && ./bin/server",
    "update": "babel-node server/utils/updateSchema.js",
    "deploy": "eval \"$(docker-machine env dev)\" && npm unlink luno-core && npm install && NODE_ENV=production webpack --config webpack.production.config.js && npm run docker",
    "lint": "eslint --ignore-path .gitignore client server",
    "docker-build": "docker build -t lunohq/luno-web . && docker tag lunohq/luno-web lunohq/luno-web:`git log -n 1 --pretty=format:'%H'`",
    "docker-push": "docker push lunohq/luno-web",
    "docker": "npm run docker-build && npm run docker-push"
  },
  "pre-commit": "lint",
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-relay-plugin": "^0.7.3",
    "chalk": "^1.1.3",
    "css-loader": "^0.23.1",
    "eslint": "^2.6.0",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-react": "^4.2.3",
    "file-loader": "^0.8.5",
    "gaze": "^1.0.0",
    "html-webpack-plugin": "^2.15.0",
    "node-sass": "^3.4.2",
    "pre-commit": "^1.1.2",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.4",
    "redbox-react": "^1.2.2",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "botkit": "git+https://github.com/lunohq/botkit.git#5bfc607444bfeb7d198cf5ba4166e4ac9ccc9c47",
    "connect-history-api-fallback": "^1.2.0",
    "cookie-parser": "^1.4.1",
    "dotenv": "^2.0.0",
    "express": "^4.13.4",
    "express-graphql": "^0.4.13",
    "express-jwt": "^3.3.0",
    "express-sslify": "^1.0.1",
    "graphql": "^0.4.18",
    "graphql-relay": "^0.3.6",
    "jsonwebtoken": "^5.7.0",
    "lodash": "^4.7.0",
    "luno-core": "git+https://1d0cdee693b540fb3b9cd603b01834ec45976ce9:x-oauth-basic@github.com/lunohq/luno-core.git#v0.6.20",
    "material-ui": "0.15.0-alpha.2",
    "morgan": "^1.7.0",
    "react": "^0.14.8",
    "react-document-title": "^2.0.1",
    "react-dom": "^0.14.8",
    "react-mdl": "^1.5.2",
    "react-relay": "^0.7.3",
    "react-router": "^2.0.1",
    "react-router-relay": "^0.9.5",
    "react-tap-event-plugin": "^0.2.2"
  }
}
